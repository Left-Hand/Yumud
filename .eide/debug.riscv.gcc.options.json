{
    "version": 2,
    "beforeBuildTasks": [],
    "afterBuildTasks": [
        {
            "name": "elf_to_lst",
            "disable": false,
            "abortAfterFailed": false,
            "command": "riscv-none-embed-objdump --source --all-headers --demangle --disassemble \"${OutDir}\\${targetName}.elf\" > \"${OutDir}\\${targetName}.lst\""
        }
    ],
    "global": {
        "output-debug-info": "enable",
        "arch": "rv32imac",
        "abi": "ilp32",
        "code-model": "medany",
        "misc-control": "-msmall-data-limit=8 -msave-restore -fmessage-length=0 -fsigned-char -ffunction-sections -fdata-sections -fno-common -Wunused -Wuninitialized --specs=nano.specs --specs=nosys.specs -ffunction-sections -fdata-sections -fno-common -fmessage-length=0 -fno-exceptions"
    },
    "c/cpp-compiler": {
        "language-c": "c17",
        "language-cpp": "c++17",
        "optimization": "level-size",
        "warnings": "all-warnings",
        "one-elf-section-per-function": true,
        "one-elf-section-per-data": true,
        "C_FLAGS": "-Wl,-Bstatic",
        "CXX_FLAGS": "-lstdc++"
    },
    "asm-compiler": {
        "ASM_FLAGS": "-Wl,-Bstatic"
    },
    "linker": {
        "output-format": "elf",
        "remove-unused-input-sections": true,
        "LD_FLAGS": "-Xlinker --gc-sections -nostartfiles -T \"sdk/Ld/Link.ld\"",
        "LIB_FLAGS": "-lstdc++ -lIQmath_RV32"
    }
}